# Buildkite MCP Server Environment Variables

# Required
BUILDKITE_API_TOKEN=your_buildkite_api_token_here

# Optional
LOG_LEVEL=info  # Options: debug, info, warn, error
BUILDKITE_API_BASE_URL=https://api.buildkite.com/v2

# For Tracing (Optional)
OTEL_SERVICE_NAME=buildkite-mcp-server
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_EXPORTER_OTLP_ENDPOINT=https://api.honeycomb.io:443
OTEL_EXPORTER_OTLP_HEADERS=x-honeycomb-team=your_honeycomb_api_key